<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/postDetails.css" />
    <title>Post Details</title>
  </head>
  <body>
    <!-- nav -->
    <%-include('../partials/navbar.ejs') %>
    <!-- content -->
    <section class="container-flex">
      <!-- main -->
      <main class="post-details">
        <article class="post-details-content">
          <img src="<%=post?.image%>" alt="" class="post-image" />
          <% if(post?.user?._id.toString() === userAuth?.toString()) { %>
          <div class="post-details-action">
            <!-- update post icon -->
            <a href="/api/v1/posts/get-form-update/<%=post?._id%>">
              <i class="fas fa-edit"></i>
            </a>
            <!-- delete post icon -->
            <form
              action="/api/v1/posts/<%=post?._id%>?_method=DELETE"
              method="post"
            >
              <button>
                <i class="fas fa-trash-alt"></i>
              </button>
            </form>
          </div>
          <% } %>

          <h1 class="post-title"><%=post?.title%></h1>
          <p class="post-body"><%=post?.description%></p>

          <% if (post?.user?.email) { %>
          <p>Email: <%= post?.user?.email %></p>
          <% } %> <% if (post?.user?.address) { %>
          <p>Address: <%= post?.user?.address %></p>
          <% } %>
        </article>

        <!-- Save post button -->
        <div class="saver-button">
          <button
            type="button"
            class="save-post-button"
            data-postid="<%= post._id %>"
          >
            ✨Add To Favorites
          </button>
        </div>

        <!-- Chat button -->
        <% if (post?.user?._id.toString() !== userAuth?.toString()) { %>
        <div class="chat-button">
          <button type="button" id="chat-with-author-btn">
            Chat with Author
          </button>
        </div>
        <div class="add-button">
          <button
            type="button"
            id="add-friend-btn"
            data-userid="<%= post?.user?._id %>"
          >
            Add Friend
          </button>
        </div>
        <% } %>

        <!-- Comment form -->
        <div class="comment-form">
          <h2>Leave a comment</h2>
          <form action="/api/v1/comments/<%=post?._id%> " method="post">
            <div class="form-group">
              <input type="text" name="message" id="name" />
            </div>
            <button type="submit" class="btn">Submit</button>
          </form>
        </div>

        <!-- comments -->
        <div class="comments">
          <h2>Comments</h2>
          <!-- loop comments -->
          <% post?.comments?.forEach((comment) => { %>
          <div class="comment">
            <div class="comment-info">
              <img
                src="<%= comment?.user?.profileImage %>"
                alt=""
                class="comment-author-image"
              />
              <div class="comment-author">
                <h4><%= comment?.user?.fullname %></h4>
                <span><%= comment?.createdAt.toLocaleDateString() %></span>
              </div>
            </div>
            <div class="comment-body">
              <p><%= comment?.message %></p>
              <!-- delete/update icon -->
              <% if(comment?.user?._id?.toString() === userAuth?.toString()) {
              %>
              <div class="post-details-action">
                <a
                  href="/api/v1/comments/<%= comment?._id %>"
                  class="comment-update"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <!-- delete post icon -->
                <form
                  action="/api/v1/comments/<%= comment?._id %>?_method=DELETE&postId=<%= post?._id %>"
                  method="post"
                >
                  <button>
                    <i class="fas fa-trash-alt"></i>
                  </button>
                </form>
              </div>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
      </main>
      <!-- aside -->
      <aside class="sidebar">
        <div class="about-me">
          <h2>About The Author</h2>
          <img
            class="avatar"
            src="<%= post?.user?.profileImage %>"
            alt="profile image"
          />
          <h2 class="about-name"><%= post?.user?.fullname %></h2>
          <% if (post?.user?.email) { %>
          <p>Email: <%= post?.user?.email %></p>
          <% } %> <% if (post?.user?.address) { %>
          <p>Address: <%= post?.user?.address %></p>
          <% } %>
          <!-- <small><%= post?.user?.role %></small> -->
          <p class="about-me-bio"><%= post?.user?.bio %></p>
        </div>
      </aside>
    </section>
    <!-- footer -->
    <%-include('../partials/footer.ejs') %>
    <!-- Frontend script -->
    <!-- Frontend script -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const savePostButtons = document.querySelectorAll(".save-post-button");
        savePostButtons.forEach((button) => {
          button.addEventListener("click", handleSavePost);
        });
      });

      const handleSavePost = (event) => {
        const postId = event.target.closest(".save-post-button").dataset.postid;

        fetch("/api/v1/users/savers", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            postId,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            console.log("Post saved:", data);
            alert("Post saved successfully!");
          })
          .catch((error) => {
            console.error("Error saving post:", error);
            alert("Failed to save post. Please try again later.");
          });
      };

      document.addEventListener("DOMContentLoaded", () => {
        const chatForm = document.getElementById("chat-form");
        chatForm.addEventListener("submit", handleFormSubmit);
      });

      document.addEventListener("DOMContentLoaded", () => {
        const chatButton = document.getElementById("chat-with-author-btn");
        if (chatButton) {
          chatButton.addEventListener("click", () => {
            const userId = "<%= post?.user?._id %>";
            if (userId) {
              console.log(userId);
              window.location.href = "/api/v1/chats/chatWindows/" + userId;
            } else {
              console.error("User ID not found for chat");
              alert("Failed to initiate chat. User ID not found.");
            }
          });
        }
      });

      document.addEventListener("DOMContentLoaded", () => {
        const addFriendButton = document.getElementById("add-friend-btn");
        if (addFriendButton) {
          addFriendButton.addEventListener("click", () => {
            const userId = "<%= post?.user?._id %>"; // 获取被添加好友的用户ID
            if (userId) {
              // 发送请求到后端添加好友
              fetch(`/api/v1/friends/add-Friend/${userId}`, {
                // 将用户ID作为请求的参数发送
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
              })
                .then((response) => response.json())
                .then((data) => {
                  alert("Friend added successfully!");
                  // 在此处更新前端以显示被添加好友的变化，可以重新加载页面或更新特定部分
                  location.reload(); // 重新加载页面
                })
                .catch((error) => {
                  console.error("Error adding friend:", error);
                  alert("Failed to add friend. Please try again later.");
                });
            } else {
              console.error("User ID not found for friend addition");
              alert("Failed to add friend. User ID not found.");
            }
          });
        }
      });
    </script>
  </body>
</html>
