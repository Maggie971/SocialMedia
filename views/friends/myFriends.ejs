<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Friends</title>
    <style>
      body {
        font-family: "Roboto", sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
      }

      .container {
        width: 60%;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      h1 {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 0;
      }

      h1 i {
        margin-left: 10px;
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      li {
        padding: 10px 0;
        border-bottom: 1px solid #ccc;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      li:last-child {
        border-bottom: none;
      }

      li img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 10px;
      }

      a {
        text-decoration: none;
        color: #000;
      }

      .chat-link {
        color: #c49bb6;
      }

      .error {
        color: red;
        margin-top: 10px;
        display: block;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>
    <header>
      <nav>
        <h1>My Friends <i class="fas fa-user-friends"></i></h1>
      </nav>
    </header>

    <div class="container">
      <ul>
        <% friends.forEach(friend => { %>
        <li>
          <img src="<%= friend.profileImage %>" alt="<%= friend.fullname %>" />
          <span><%= friend.fullname %></span>
          <a
            class="chat-link"
            href="/api/v1/chats/chatWindows/<%= friend._id %>"
            >Chat</a
          >
        </li>
        <% }) %>
      </ul>
    </div>

    <!-- footer -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
